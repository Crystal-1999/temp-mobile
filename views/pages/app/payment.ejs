    <style>
        /* ============================================
           PAYMENT PAGE - User-Friendly & Responsive
           ============================================ */

        /* Payment Card */
        .payment-card {
            background: #ffffff;
            border-radius: 20px;
            padding: 2rem 1.75rem;
            box-shadow: 0 18px 40px rgba(26, 26, 67, 0.08);
            border: 1px solid rgba(153, 72, 197, 0.12);
        }

        .payment-header {
            padding-bottom: 1.5rem;
            border-bottom: 1px solid #f1f3f5;
        }

        .payment-title {
            font-weight: 700;
            font-size: 1.75rem;
            background: linear-gradient(135deg, #9948c5 0%, #7c2c91 50%, #f47acb 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
        }

        .payment-subtitle {
            font-size: 0.95rem;
            color: #6c757d;
            margin: 0;
        }

        /* Balance Card */
        .balance-card {
            background: linear-gradient(135deg, rgba(153, 72, 197, 0.08) 0%, rgba(244, 122, 203, 0.08) 100%);
            border: 1px solid rgba(153, 72, 197, 0.15);
            border-radius: 16px;
            padding: 1.25rem 1.5rem;
            text-align: center;
            min-width: 180px;
        }

        .balance-label {
            font-size: 0.85rem;
            color: #6c757d;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0.5rem;
        }

        .balance-amount {
            font-size: 2rem;
            font-weight: 700;
            background: linear-gradient(135deg, #9948c5 0%, #7c2c91 50%, #f47acb 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            line-height: 1;
        }

        /* Payment Info */
        .payment-info {
            background: rgba(23, 162, 184, 0.08);
            border-left: 3px solid #17a2b8;
            border-radius: 8px;
            padding: 0.875rem 1rem;
            color: #0c5460;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
        }

        .payment-info i {
            color: #17a2b8;
            flex-shrink: 0;
        }

        /* Payment Methods Section */
        .payment-section-label {
            font-weight: 600;
            font-size: 1rem;
            color: #1a1a2e;
            display: block;
        }

        .payment-methods {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .payment-method-card {
            flex: 1;
            min-width: 120px;
            max-width: 200px;
            background: #ffffff;
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 1.25rem 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.75rem;
            text-align: center;
        }

        .payment-method-card:hover {
            border-color: rgba(153, 72, 197, 0.3);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(153, 72, 197, 0.15);
        }

        .payment-method-card.selected {
            border-color: #9948c5;
            background: linear-gradient(135deg, rgba(153, 72, 197, 0.08) 0%, rgba(244, 122, 203, 0.08) 100%);
            box-shadow: 0 0 0 3px rgba(153, 72, 197, 0.1);
        }

        .payment-method-card img {
            width: 60px;
            height: auto;
            object-fit: contain;
        }

        .payment-method-name {
            font-size: 0.9rem;
            font-weight: 600;
            color: #333;
        }

        .payment-method-card.selected .payment-method-name {
            color: #9948c5;
        }

        /* Payment Methods Note */
        .payment-methods-note {
            font-size: 0.875rem;
            color: #6c757d;
            margin: 0;
            display: flex;
            align-items: center;
        }

        .payment-methods-note i {
            color: #9948c5;
        }

        /* Amount Section */
        .amount-section {
            display: none;
        }

        .amount-section.show {
            display: block;
        }

        .payment-divider {
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(153, 72, 197, 0.2), transparent);
            margin: 1.5rem 0;
        }

        /* Amount Buttons */
        .amount-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
        }

        .amount-btn {
            flex: 1;
            min-width: 80px;
            max-width: 120px;
            padding: 0.875rem 1rem;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            background: #ffffff;
            color: #333;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .amount-btn:hover {
            border-color: #9948c5;
            background: rgba(153, 72, 197, 0.05);
            color: #9948c5;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(153, 72, 197, 0.15);
        }

        .amount-btn.active {
            border-color: #9948c5;
            background: linear-gradient(135deg, #9948c5 0%, #7c2c91 100%);
            color: #ffffff;
            box-shadow: 0 4px 16px rgba(153, 72, 197, 0.3);
        }

        /* Custom Amount Input */
        .custom-amount-input {
            margin-top: 1rem;
        }

        .custom-amount-input .form-label {
            font-weight: 500;
            font-size: 0.9rem;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .custom-amount-input .input-group-text {
            background: #ffffff;
            border-right: none;
            border-color: #dee2e6;
            color: #9948c5;
        }

        .custom-amount-input .form-control {
            border-left: none;
            font-size: 1rem;
            font-weight: 600;
        }

        .custom-amount-input .form-control:focus {
            border-color: #9948c5;
            box-shadow: 0 0 0 3px rgba(153, 72, 197, 0.12);
        }

        /* Payment Actions */
        .payment-actions {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            margin-top: 2rem;
        }

        .btn-primary-payment {
            background: linear-gradient(135deg, #9948c5 0%, #7c2c91 100%);
            color: #ffffff;
            border: none;
            border-radius: 12px;
            padding: 0.875rem 2rem;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 16px rgba(153, 72, 197, 0.3);
        }

        .btn-primary-payment:hover:not(:disabled) {
            background: linear-gradient(135deg, #7c2c91 0%, #9948c5 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(153, 72, 197, 0.4);
            color: #ffffff;
        }

        .btn-primary-payment:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            position: relative;
        }

        .btn-primary-payment:disabled::after {
            content: '';
            position: absolute;
            width: 16px;
            height: 16px;
            top: 50%;
            left: 50%;
            margin-left: -8px;
            margin-top: -8px;
            border: 2px solid #ffffff;
            border-radius: 50%;
            border-top-color: transparent;
            animation: spin 0.6s linear infinite;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .btn-secondary-payment {
            background: #ffffff;
            color: #6c757d;
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 0.875rem 2rem;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .btn-secondary-payment:hover {
            background: #f8f9fa;
            border-color: #dc3545;
            color: #dc3545;
        }

        /* Responsive Design */
        @media (min-width: 576px) {
            .payment-actions {
                flex-direction: row;
                justify-content: space-between;
            }

            .btn-primary-payment,
            .btn-secondary-payment {
                flex: 1;
                max-width: 200px;
            }
        }

        @media (max-width: 767.98px) {
            .payment-card {
                padding: 1.5rem 1.25rem;
                border-radius: 16px;
            }

            .payment-title {
                font-size: 1.5rem;
            }

            .payment-subtitle {
                font-size: 0.9rem;
            }

            .balance-card {
                min-width: 100%;
                padding: 1rem 1.25rem;
            }

            .balance-amount {
                font-size: 1.75rem;
            }

            .payment-method-card {
                min-width: 100px;
                padding: 1rem 0.875rem;
            }

            .payment-method-card img {
                width: 50px;
            }

            .amount-btn {
                min-width: 70px;
                padding: 0.75rem 0.875rem;
                font-size: 0.95rem;
            }

            .payment-actions {
                margin-top: 1.5rem;
            }

            .btn-primary-payment,
            .btn-secondary-payment {
                width: 100%;
                padding: 0.875rem 1.5rem;
            }
        }

        @media (max-width: 575.98px) {
            .payment-card {
                padding: 1.25rem 1rem;
                border-radius: 14px;
            }

            .payment-title {
                font-size: 1.35rem;
            }

            .balance-card {
                padding: 0.875rem 1rem;
            }

            .balance-label {
                font-size: 0.8rem;
            }

            .balance-amount {
                font-size: 1.5rem;
            }

            .payment-info {
                padding: 0.75rem 0.875rem;
                font-size: 0.85rem;
            }

            .payment-methods {
                gap: 0.75rem;
            }

            .payment-method-card {
                min-width: calc(50% - 0.375rem);
                padding: 0.875rem 0.75rem;
            }

            .amount-buttons {
                gap: 0.5rem;
            }

            .amount-btn {
                min-width: calc(50% - 0.25rem);
                padding: 0.7rem 0.75rem;
                font-size: 0.9rem;
            }

            .custom-amount-input .form-control {
                font-size: 0.95rem;
            }
        }
    </style>
</head>

<body>
    <%- include('../../components/app_navbar') %>

    <div class="outer-container py-4 py-md-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10">
                    <!-- Payment Card -->
                    <div class="payment-card">
