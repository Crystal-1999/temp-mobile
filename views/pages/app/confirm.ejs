<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Review your selected service and country before proceeding. Confirm your choices to get your temporary phone number for SMS verification.">
  <meta name="keywords" content="confirm selection, review order, proceed to payment, verify selection">
  <meta name="robots" content="noindex, nofollow">
  <link rel="canonical" href="https://temp-number.com/app/confirm">
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://temp-number.com/app/confirm">
  <meta property="og:title" content="Confirm Selection - Review & Proceed | Temp Number">
  <meta property="og:description" content="Review your selected service and country before proceeding. Confirm your choices to get your temporary phone number for SMS verification.">
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content="Confirm Selection - Review & Proceed | Temp Number">
  <meta name="twitter:description" content="Review your selected service and country before proceeding. Confirm your choices to get your temporary phone number for SMS verification.">
  
  <title>Confirm Selection - Review & Proceed | Temp Number</title>
  <link rel="icon" href="/image/logo.png" type="image/png">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css"> <!-- Corrected Path -->
  <link rel="stylesheet" href="/css/app.css">
</head>
<body>
  <%- include('../../components/app_navbar') %>
  <div class="outer-container py-4 py-md-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 col-xl-7">
          <!-- Step 3: Confirm Selection -->
          <div id="step3" class="step-container">
            <!-- Header -->
            <div class="text-center mb-4">
              <h2 class="step-title mb-2">Confirm Selection</h2>
              <p class="step-subtitle mb-4">Review your choices before proceeding</p>
              <div class="progress mb-4">
                <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
            </div>

            <!-- Order Summary Card -->
            <div class="order-summary-card mb-4">
              <div class="order-summary-header">
                <h5 class="mb-0">
                  <i class="fas fa-receipt me-2"></i>Order Summary
                </h5>
              </div>
              
              <div class="order-summary-body">
                <!-- Service -->
                <div class="summary-item">
                  <div class="summary-item-content">
                    <div class="summary-item-label">Service</div>
                    <div class="summary-item-value" id="confirmSelectedService">None</div>
                  </div>
                </div>

                <!-- Country -->
                <div class="summary-item">
                  <div class="summary-item-content">
                    <div class="summary-item-label">Country</div>
                    <div class="summary-item-value" id="confirmSelectedCountry">None</div>
                  </div>
                </div>

                <!-- Divider -->
                <div class="summary-divider"></div>

                <!-- Price -->
                <div class="summary-item summary-item-total">
                  <div class="summary-item-content">
                    <div class="summary-item-label">Total Amount</div>
                    <div class="summary-item-value summary-item-value-total" id="confirmSelectedPrice">$0.00</div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="confirm-actions">
              <button class="btn btn-outline-secondary flex-grow-1" onclick="window.location.href='/app/services'">
               Back
              </button>
              <button class="btn btn-orange flex-grow-1" onclick="checkLoginAndProceed()">
                Proceed to Payment<i class="fas fa-arrow-right ms-2"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/script.js" defer></script>
  <script src="/js/app.js" defer></script>
  <script>
    // Function to display selected service and country
    function displaySelectedOptions() {
      const selectedService = localStorage.getItem('selectedService'); // Retrieve service name
      const selectedCountry = localStorage.getItem('selectedCountry'); // Retrieve country name
      const selectedPrice = localStorage.getItem('selectedPrice'); // Retrieve price
  
      // Display the selected service
      if (selectedService) {
        document.getElementById('confirmSelectedService').textContent = selectedService;
      } else {
        document.getElementById('confirmSelectedService').textContent = 'None';
      }
  
      // Display the selected country
      if (selectedCountry) {
        document.getElementById('confirmSelectedCountry').textContent = selectedCountry;
      } else {
        document.getElementById('confirmSelectedCountry').textContent = 'None';
      }
  
      // Display the selected price
      if (selectedPrice) {
        document.getElementById('confirmSelectedPrice').textContent = `$${selectedPrice}`;
      } else {
        document.getElementById('confirmSelectedPrice').textContent = '$0.00';
      }
    }
  
    // Call the function when the page loads
    document.addEventListener('DOMContentLoaded', displaySelectedOptions);
  </script>
  <script>
    async function checkLoginAndProceed() {
    try {
        // Fetch login status
        const loginResponse = await fetch('/auth/status', { credentials: 'include' });
        const loginData = await loginResponse.json();
        console.log('Login Status:', loginData); // Debugging

        if (!loginData.isLoggedIn) {
            window.location.href = '/app/login'; // Redirect to login if not logged in
            return;
        }

        // Fetch the user's balance
        const balanceResponse = await fetch('/auth/balance', { credentials: 'include' });
        const balanceData = await balanceResponse.json();
        const balance = balanceData.balance || 0;

        // Get the selected price from localStorage
        const selectedPrice = parseFloat(localStorage.getItem('selectedPrice')) || 0;


        // Compare balance with selected price
        if (balance >= selectedPrice) {
            window.location.href = '/app/activation'; // Redirect to activation page
        } else {
            showErrorToast('Not enough funds. Please add funds to proceed.');
            setTimeout(() => {
                window.location.href = '/app/payment'; // Redirect to payment page
            }, 1000);
        }
    } catch (error) {
        console.error('Error checking login status or balance:', error);
        showErrorToast('You are not logged in. Please login to proceed.');
        setTimeout(() => {
            window.location.href = '/app/login'; // Fallback redirect
        }, 1000);
    }
}
  </script>
</body>
</html>