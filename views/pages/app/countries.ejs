<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Choose from over 15 countries to get a temporary phone number. Select your preferred country location for SMS verification and online account registration.">
  <meta name="keywords" content="select country, choose location, country phone numbers, international verification">
  <meta name="robots" content="noindex, nofollow">
  <link rel="canonical" href="https://temp-number.com/app/countries">
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://temp-number.com/app/countries">
  <meta property="og:title" content="Select Country - Choose Location | Temp Number">
  <meta property="og:description" content="Choose from over 15 countries to get a temporary phone number. Select your preferred country location for SMS verification and online account registration.">
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content="Select Country - Choose Location | Temp Number">
  <meta name="twitter:description" content="Choose from over 15 countries to get a temporary phone number. Select your preferred country location for SMS verification and online account registration.">
  
  <title>Select Country - Choose Location | Temp Number</title>
  <link rel="icon" href="/image/logo.png" type="image/png">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/app.css">
</head>
<body>
  <%- include('../../components/app_navbar') %>
  <div class="outer-container py-4 py-md-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
          <!-- Step 2: Country Section -->
          <div id="step2" class="step-container">
            <!-- Header -->
            <div class="step-header text-center mb-3">
              <h2 class="step-title">Select country</h2>
              <p class="step-subtitle">Choose the country where you want to receive SMS</p>
            </div>

            <!-- Progress -->
            <div class="progress mt-2 mb-3">
              <div class="progress-bar" role="progressbar" style="width: 33%;" aria-valuenow="33" aria-valuemin="0"
                aria-valuemax="100"></div>
            </div>

            <!-- Search -->
            <div class="form-group mt-3">
              <div class="input-group search-country-group">
                <span class="input-group-text">
                  <i class="fa-solid fa-magnifying-glass"></i>
                </span>
                <input id="searchCountry" type="text" class="form-control" placeholder="Search for a country"
                  oninput="filterCountries()">
              </div>
            </div>

            <!-- Country list -->
            <div class="mt-3">
              <div id="countryList" class="list-group country-list">
                <!-- Country list will be dynamically inserted here -->
              </div>
            </div>

            <!-- Actions -->
            <div class="d-flex flex-column flex-sm-row justify-content-between gap-3 mt-4">
              <button class="btn btn-outline-secondary flex-grow-1" onclick="window.location.href='/'">
                Cancel
              </button>
              <button id="continueButton" class="btn btn-orange flex-grow-1" onclick="validateCountrySelection()">
                Continue &rarr;
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    function validateCountrySelection() {
      const selectedCountry = localStorage.getItem('selectedCountry');
      if (!selectedCountry) {
        showWarningToast('Please select a country before continuing.');
      } else {
        window.location.href = '/app/services';
      }
    }

    function filterCountries() {
    const searchInput = document.getElementById('searchCountry').value.toLowerCase();
    const countryItems = document.querySelectorAll('#countryList .list-group-item');

    countryItems.forEach(item => {
      const countryName = item.textContent.toLowerCase();
      if (countryName.includes(searchInput)) {
        item.style.display = 'block';
      } else {
        item.style.display = 'none';
      }
    });
  }

  </script>
  <script src="/js/script.js" defer></script>
  <script src="/js/app.js" defer></script>
</body>
</html>