<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Select a service platform like WhatsApp, Telegram, Facebook, or Google to get a temporary phone number for SMS verification and account registration.">
  <meta name="keywords" content="select service, choose platform, WhatsApp, Telegram, Facebook, Google verification">
  <meta name="robots" content="noindex, nofollow">
  <link rel="canonical" href="https://temp-number.com/app/services">
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://temp-number.com/app/services">
  <meta property="og:title" content="Select Service - Choose Platform | Temp Number">
  <meta property="og:description" content="Select a service platform like WhatsApp, Telegram, Facebook, or Google to get a temporary phone number for SMS verification and account registration.">
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content="Select Service - Choose Platform | Temp Number">
  <meta name="twitter:description" content="Select a service platform like WhatsApp, Telegram, Facebook, or Google to get a temporary phone number for SMS verification and account registration.">
  
  <title>Select Service - Choose Platform | Temp Number</title>
  <link rel="icon" href="/image/logo.png" type="image/png">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/app.css">
</head>

<body>
  <%- include('../../components/app_navbar') %>
  <div class="outer-container py-4 py-md-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
          <!-- Step 1: Service Section -->
          <div id="step1" class="step-container">
            <!-- Header -->
            <div class="step-header text-center mb-3">
              <h2 class="step-title">Select service</h2>
              <p class="step-subtitle">Pick the service you want to verify with your Temp Number</p>
            </div>

            <!-- Progress -->
            <div class="progress mt-2 mb-3">
              <div class="progress-bar" role="progressbar" style="width: 66%;" aria-valuenow="66" aria-valuemin="0"
                aria-valuemax="100"></div>
            </div>

            <!-- Search -->
            <div class="form-group mt-3">
              <div class="input-group search-country-group">
                <span class="input-group-text">
                  <i class="fa-solid fa-magnifying-glass"></i>
                </span>
                <input id="searchService" type="text" class="form-control" placeholder="Search for a service"
                  oninput="filterServices()">
              </div>
            </div>

            <!-- Service list -->
            <div class="mt-3">
              <div id="serviceList" class="list-group country-list">
                <!-- Service list will be dynamically inserted here -->
              </div>
            </div>

            <!-- Actions -->
            <div class="d-flex flex-column flex-sm-row justify-content-between gap-3 mt-4">
              <button class="btn btn-outline-secondary flex-grow-1" onclick="window.location.href='/app/countries'">
                Back
              </button>
              <button id="continueButton" class="btn btn-orange flex-grow-1" onclick="validateServiceSelection()">
                Continue &rarr;
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
    <script>
      function validateServiceSelection() {
        const selectedService = localStorage.getItem('selectedService');
        if (!selectedService) {
          showWarningToast('Please select a service before continuing.');
        } else {
          window.location.href = '/app/confirm';
        }
      }

      function filterServices() {
        const searchInput = document.getElementById('searchService').value.toLowerCase();
        const serviceItems = document.querySelectorAll('#serviceList .list-group-item');

        serviceItems.forEach(item => {
          const serviceName = item.textContent.toLowerCase();
          if (serviceName.includes(searchInput)) {
            item.style.display = 'block';
          } else {
            item.style.display = 'none';
          }
        });
      }

    </script>
    <script src="/js/script.js" defer></script>
    <script src="/js/app.js" defer></script>

</body>

</html>