  <link rel="stylesheet" href="/css/app.css">
  <style>
    /* ============================================
       HISTORY PAGE - User-Friendly & Responsive
       ============================================ */
    
    :root {
      --primary-gradient: linear-gradient(135deg, #9948c5 0%, #7c2c91 50%, #f47acb 100%);
      --primary-color: #9948c5;
      --secondary-color: #6c757d;
      --success-color: #28a745;
      --warning-color: #ffc107;
    }
    
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, rgba(153, 72, 197, 0.02) 0%, rgba(244, 122, 203, 0.02) 50%, #ffffff 100%);
      color: #333;
      min-height: 100vh;
    }
    
    .outer-container {
      padding: 2rem 1rem;
    }
    
    .history-container {
      max-width: 900px;
      margin: 0 auto;
      background: #ffffff;
      padding: 2.5rem;
      border-radius: 24px;
      box-shadow: 0 18px 40px rgba(26, 26, 67, 0.08);
      border: 1px solid rgba(153, 72, 197, 0.12);
    }
    
    .history-header-section {
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
      border-bottom: 2px solid rgba(153, 72, 197, 0.1);
    }
    
    .history-title {
      font-size: clamp(1.75rem, 4vw, 2.25rem);
      font-weight: 700;
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }
    
    .history-title i {
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .history-subtitle {
      font-size: clamp(0.9rem, 2vw, 1rem);
      color: #6c757d;
      margin: 0;
    }
    
    .history-actions-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1.5rem;
      flex-wrap: wrap;
      gap: 1rem;
    }
    
    .section-title {
      font-size: 1.15rem;
      font-weight: 600;
      color: #1a1a2e;
      margin: 0;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .section-title i {
      color: var(--primary-color);
    }
    
    .btn-new-number {
      background: var(--primary-gradient);
      color: #ffffff;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 12px;
      font-weight: 600;
      font-size: 0.95rem;
      transition: all 0.3s ease;
      box-shadow: 0 4px 16px rgba(153, 72, 197, 0.3);
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .btn-new-number:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(153, 72, 197, 0.4);
      color: #ffffff;
    }
    
    .history-list {
      margin-bottom: 2rem;
    }
    
    .history-card {
      background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
      border: 1px solid rgba(153, 72, 197, 0.12);
      border-radius: 16px;
      padding: 1.5rem;
      margin-bottom: 1rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }
    
    .history-card-content {
      display: flex;
      align-items: flex-start;
      gap: 1rem;
    }
    
    .history-details {
      flex: 1;
      min-width: 0;
    }
    
    .history-number {
      font-weight: 700;
      font-size: clamp(1rem, 2vw, 1.15rem);
      color: #1a1a2e;
      margin-bottom: 0.25rem;
      font-family: 'Courier New', monospace;
      letter-spacing: 0.5px;
    }
    
    .history-number-code {
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .history-service-badge {
      display: inline-block;
      background: linear-gradient(135deg, rgba(153, 72, 197, 0.1) 0%, rgba(244, 122, 203, 0.1) 100%);
      color: var(--primary-color);
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
      margin-top: 0.5rem;
    }
    
    .sms-preview {
      margin-top: 1rem;
      padding: 0.875rem;
      background: rgba(23, 162, 184, 0.08);
      border-left: 3px solid #17a2b8;
      border-radius: 8px;
    }
    
    .sms-label {
      font-size: 0.75rem;
      color: #17a2b8;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 0.5rem;
    }
    
    .sms-text {
      font-size: 0.9rem;
      color: #333;
      font-weight: 500;
      word-break: break-word;
      line-height: 1.5;
    }
    
    .history-meta-section {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      gap: 0.75rem;
      flex-shrink: 0;
    }
    
    .history-date {
      font-size: 0.8rem;
      color: #6c757d;
      white-space: nowrap;
      display: flex;
      align-items: center;
      gap: 0.25rem;
    }
    
    .history-date i {
      font-size: 0.7rem;
    }
    
    .status-badge {
      padding: 0.4rem 0.9rem;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: capitalize;
    }
    
    .status-active {
      background: linear-gradient(135deg, rgba(153, 72, 197, 0.15) 0%, rgba(244, 122, 203, 0.15) 100%);
      color: var(--primary-color);
      border: 1px solid rgba(153, 72, 197, 0.3);
    }
    
    .status-completed {
      background: rgba(40, 167, 69, 0.1);
      color: #28a745;
      border: 1px solid rgba(40, 167, 69, 0.3);
    }
    
    .status-expired {
      background: rgba(108, 117, 125, 0.1);
      color: #6c757d;
      border: 1px solid rgba(108, 117, 125, 0.3);
    }
    
    .history-actions {
      display: flex;
      gap: 0.5rem;
      margin-left: 1rem;
    }
    
    .btn-action {
      background: #ffffff;
      border: 2px solid rgba(153, 72, 197, 0.2);
      color: var(--primary-color);
      width: 40px;
      height: 40px;
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      cursor: pointer;
    }
    
    .btn-action:hover {
      background: var(--primary-gradient);
      color: #ffffff;
      border-color: var(--primary-color);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(153, 72, 197, 0.3);
    }
    
    .empty-history {
      text-align: center;
      padding: 4rem 2rem;
      background: linear-gradient(135deg, rgba(153, 72, 197, 0.03) 0%, rgba(244, 122, 203, 0.03) 100%);
      border-radius: 16px;
      border: 2px dashed rgba(153, 72, 197, 0.2);
    }
    
    .empty-history-icon {
      width: 80px;
      height: 80px;
      margin: 0 auto 1.5rem;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0.1;
    }
    
    .empty-history-icon i {
      font-size: 2.5rem;
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: black;
      background-clip: text;
      opacity: 1;
    }
    
    .empty-history h5 {
      font-size: 1.25rem;
      font-weight: 600;
      color: #1a1a2e;
      margin-bottom: 0.5rem;
    }
    
    .empty-history p {
      color: #6c757d;
      margin: 0;
    }
    
    .footer-actions {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 1.5rem;
      border-top: 1px solid rgba(153, 72, 197, 0.1);
      flex-wrap: wrap;
      gap: 1rem;
    }
    
    .btn-footer {
      padding: 0.625rem 1.25rem;
      border-radius: 10px;
      font-weight: 600;
      font-size: 0.9rem;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .btn-clear {
      background: #ffffff;
      border: 2px solid #dc3545;
      color: #dc3545;
    }
    
    .btn-clear:hover {
      background: #dc3545;
      color: #ffffff;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
    }
    
    .btn-export {
      background: #ffffff;
      border: 2px solid var(--primary-color);
      color: var(--primary-color);
    }
    
    .btn-export:hover {
      background: var(--primary-gradient);
      color: #ffffff;
      border-color: var(--primary-color);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(153, 72, 197, 0.3);
    }
    
    .loading-state {
      text-align: center;
      padding: 3rem;
    }
    
    .spinner-custom {
      width: 3rem;
      height: 3rem;
      border: 4px solid rgba(153, 72, 197, 0.1);
      border-top-color: var(--primary-color);
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
      margin: 0 auto 1rem;
    }
    
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    
    /* Responsive Design */
    @media (max-width: 767.98px) {
      .outer-container {
        padding: 1rem 0.5rem;
      }
      
      .history-container {
        padding: 1.5rem;
        border-radius: 20px;
      }
      
      .history-card {
        padding: 1.25rem;
      }
      
      .history-card-content {
        flex-wrap: wrap;
        gap: 1rem;
      }
      
      .history-meta-section {
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        width: 100%;
      }
      
      .history-actions {
        margin-left: 0;
        margin-top: 0.5rem;
      }
      
      .footer-actions {
        flex-direction: column;
      }
      
      .btn-footer {
        width: 100%;
        justify-content: center;
      }
    }
    
    @media (max-width: 575.98px) {
      .history-container {
        padding: 1.25rem;
        border-radius: 16px;
      }
      
      .history-header-section {
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
      }
      
      .history-actions-header {
        flex-direction: column;
        align-items: stretch;
      }
      
      .btn-new-number {
        width: 100%;
        justify-content: center;
      }
      
      .history-card {
        padding: 1rem;
      }
      
      .history-flag-wrapper {
        width: 40px;
        height: 40px;
      }
    }
  </style>
</head>
<body>

  <%- include('../../components/app_navbar') %>

  <div class="outer-container py-4 py-md-5">
    <div class="history-container">
      <!-- Header Section -->
      <div class="history-header-section">
        <h1 class="history-title">
          <i class="fas fa-history"></i>
          History
        </h1>
        <p class="history-subtitle">Your temporary numbers and activations</p>
      </div>

      <!-- Actions Header -->
      <div class="history-actions-header">
        <h5 class="section-title">
          <i class="fas fa-list"></i>
          Recent Numbers
        </h5>
        <button class="btn-new-number" onclick="window.location.href='/app/services'">
          <i class="fas fa-plus"></i>
          <span>New Number</span>
        </button>
      </div>

      <!-- History List -->
      <div class="history-list" id="historyList">
        <div class="loading-state">
          <div class="spinner-custom"></div>
          <p class="text-muted">Loading history...</p>
        </div>
      </div>

      <!-- Footer Actions -->
      <div class="footer-actions">
        <button class="btn-footer btn-clear" onclick="clearHistory()">
          <i class="fas fa-trash-alt"></i>
          <span>Clear History</span>
        </button>
        <button class="btn-footer btn-export" onclick="exportHistory()">
          <i class="fas fa-download"></i>
          <span>Export CSV</span>
        </button>
      </div>
    </div>
  </div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        loadHistory();
    });

    // Load history from the server
    async function loadHistory() {
        try {
            const response = await fetch('/api/history');
            
            if (!response.ok) {
                const errorData = await response.json().catch(() => ({ error: 'Unknown error' }));
                throw new Error(errorData.error || `HTTP ${response.status}: Failed to load history`);
            }
            
            const history = await response.json();
            console.log('History data received:', history);
            
            // Check if history is an array
            if (!Array.isArray(history)) {
                console.error('History is not an array:', history);
                throw new Error('Invalid response format');
            }
            
            renderHistory(history);
        } catch (error) {
            console.error('Error loading history:', error);
            document.getElementById('historyList').innerHTML = `
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i>
                    Failed to load history: ${error.message}
                </div>
            `;
        }
    }

    // Render history items
    function renderHistory(history) {
        const historyList = document.getElementById('historyList');
        
        if (history.length === 0) {
            historyList.innerHTML = `
                <div class="empty-history">
                    <div class="empty-history-icon">
                        <i class="fas fa-history"></i>
                    </div>
                    <h5>No history yet</h5>
                    <p>Your activated numbers will appear here</p>
                </div>
            `;
            return;
        }

        // Sort by newest first
        history.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt));

        historyList.innerHTML = history.map(item => {
            const fullNumber = `${item.dialCode || ''} ${item.phoneNumber || ''}`.trim();
            const escapedSms = item.smsContent ? item.smsContent.replace(/'/g, "\\'").replace(/"/g, '&quot;') : '';
            
            return `
                <div class="history-card">
                    <div class="history-card-content">
                        <div class="history-details">
                            <div class="history-number">
                                <span class="history-number-code">${item.dialCode || ''}</span> ${item.phoneNumber || 'N/A'}
                            </div>
                            <div class="history-service-badge">
                                <i class="fas fa-mobile-alt me-1"></i>
                                ${item.service || 'Unknown service'}
                            </div>
                            ${item.smsContent ? `
                                <div class="sms-preview">
                                    <div class="sms-label">
                                        <i class="fas fa-sms me-1"></i>
                                        Received SMS
                                    </div>
                                    <div class="sms-text">${escapedSms}</div>
                                </div>
                            ` : ''}
                        </div>
                        <div class="history-meta-section">
                            <div class="history-date">
                                <i class="far fa-clock"></i>
                                ${formatDate(item.createdAt)}
                            </div>
                            <span class="status-badge status-${item.status || 'active'}">
                                ${item.status || 'active'}
                            </span>
                        </div>
                        <div class="history-actions">
                            <button class="btn-action" onclick="copyNumber('${fullNumber.replace(/'/g, "\\'")}')" title="Copy number">
                                <i class="fas fa-copy"></i>
                            </button>
                        </div>
                    </div>
                </div>
            `;
        }).join('');
    }

    // Format date for display
    function formatDate(dateString) {
        const date = new Date(dateString);
        return date.toLocaleString(undefined, {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
        });
    }

    // Copy number to clipboard
    async function copyNumber(number) {
        try {
            await navigator.clipboard.writeText(number);
            showToast('Number copied to clipboard!', 'success');
        } catch (err) {
            // Fallback for older browsers
            const tempInput = document.createElement('input');
            tempInput.value = number;
            document.body.appendChild(tempInput);
            tempInput.select();
            document.execCommand('copy');
            document.body.removeChild(tempInput);
            showToast('Number copied to clipboard!', 'success');
        }
    }

    // Clear all history
    async function clearHistory() {
        if (confirm('Are you sure you want to clear all history?')) {
            try {
                const response = await fetch('/api/history', {
                    method: 'DELETE'
                });
                
                if (!response.ok) {
                    const errorData = await response.json().catch(() => ({ error: 'Unknown error' }));
                    throw new Error(errorData.error || 'Failed to clear history');
                }
                
                const result = await response.json();
                loadHistory();
                showToast(`History cleared (${result.deletedCount || 0} items)`, 'success');
            } catch (error) {
                console.error('Error clearing history:', error);
                showToast('Failed to clear history: ' + error.message, 'error');
            }
        }
    }

    // Export history
    function exportHistory() {
        const historyList = document.getElementById('historyList');
        const items = historyList.querySelectorAll('.history-card');
        
        if (items.length === 0) {
            showToast('No history to export', 'warning');
            return;
        }

        let csv = 'Phone Number,Service,Status,Date,SMS Content\n';
        items.forEach(item => {
            const number = item.querySelector('.history-number')?.textContent?.trim() || '';
            const service = item.querySelector('.history-service-badge')?.textContent?.trim() || '';
            const status = item.querySelector('.status-badge')?.textContent?.trim() || '';
            const date = item.querySelector('.history-date')?.textContent?.trim() || '';
            const sms = item.querySelector('.sms-text')?.textContent?.trim() || '';
            csv += `"${number}","${service}","${status}","${date}","${sms}"\n`;
        });

        const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `history-${new Date().toISOString().split('T')[0]}.csv`;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        window.URL.revokeObjectURL(url);
        
        showToast('History exported successfully', 'success');
    }

    // Show toast notification
    function showToast(message, type = 'info') {
        const toast = document.createElement('div');
        const bgColor = type === 'success' ? 'linear-gradient(135deg, #28a745 0%, #20c997 100%)' 
                      : type === 'error' ? 'linear-gradient(135deg, #dc3545 0%, #c82333 100%)'
                      : 'linear-gradient(135deg, #17a2b8 0%, #138496 100%)';
        
        toast.style.cssText = `
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            min-width: 280px;
            max-width: 400px;
            background: ${bgColor};
            color: white;
            padding: 1rem 1.25rem;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
            animation: slideInRight 0.3s ease-out;
        `;
        
        toast.innerHTML = `
            <div class="d-flex align-items-center">
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'} me-2"></i>
                <span style="flex: 1;">${message}</span>
                <button type="button" class="btn-close btn-close-white ms-2" onclick="this.closest('div[style*=\"position: fixed\"]').remove()" style="opacity: 0.8;"></button>
            </div>
        `;
        
        document.body.appendChild(toast);
        
        setTimeout(() => {
            toast.style.animation = 'slideOutRight 0.3s ease-out';
            setTimeout(() => toast.remove(), 300);
        }, 3000);
    }
    
    // Add CSS animations for toast
    const style = document.createElement('style');
    style.textContent = `
        @keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }
        @keyframes slideOutRight {
            from {
                transform: translateX(0);
                opacity: 1;
            }
            to {
                transform: translateX(100%);
                opacity: 0;
            }
        }
    `;
    document.head.appendChild(style);
</script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
