  <title>Transaction History - View All Payments | Temp Number</title>
  <link rel="icon" href="/image/logo.png" type="image/png">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css"> 
  <link rel="stylesheet" href="/css/app.css">
  <style>
        /* ============================================
           TRANSACTIONS PAGE - User-Friendly & Responsive
           ============================================ */

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        /* Transactions Card */
        .transactions-card {
            background: #ffffff;
            border-radius: 20px;
            padding: 2rem 1.75rem;
            box-shadow: 0 18px 40px rgba(26, 26, 67, 0.08);
            border: 1px solid rgba(153, 72, 197, 0.12);
        }

        .transactions-header {
            padding-bottom: 1.5rem;
            border-bottom: 1px solid #f1f3f5;
            margin-bottom: 1.5rem;
        }

        .transactions-title {
            font-weight: 700;
            font-size: 1.75rem;
            background: linear-gradient(135deg, #9948c5 0%, #7c2c91 50%, #f47acb 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
        }

        .transactions-subtitle {
            font-size: 0.95rem;
            color: #6c757d;
            margin: 0;
        }

        /* Download Button */
        .btn-download {
            background: linear-gradient(135deg, #9948c5 0%, #7c2c91 100%);
            color: #ffffff;
            border: none;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(153, 72, 197, 0.25);
        }

        .btn-download:hover {
            background: linear-gradient(135deg, #7c2c91 0%, #9948c5 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(153, 72, 197, 0.35);
            color: #ffffff;
        }

        .btn-download i {
            margin-right: 0.5rem;
        }

        /* Table Styles */
        .transactions-table {
            margin-top: 1.5rem;
        }

        .transactions-table thead {
            background: linear-gradient(135deg, rgba(153, 72, 197, 0.08) 0%, rgba(244, 122, 203, 0.08) 100%);
        }

        .transactions-table thead th {
            border: none;
            padding: 1rem;
            font-weight: 600;
            font-size: 0.9rem;
            color: #1a1a2e;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .transactions-table tbody td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid #f1f3f5;
        }

        .transactions-table tbody tr {
            transition: all 0.2s ease;
        }

        /* Transaction ID */
        .transaction-id {
            font-family: 'Courier New', monospace;
            font-size: 0.85rem;
            color: #9948c5;
            font-weight: 600;
            word-break: break-all;
        }

        .transaction-id-icon {
            margin-right: 0.5rem;
            color: #9948c5;
        }

        /* Transaction Date */
        .transaction-date {
            color: #6c757d;
            font-size: 0.9rem;
        }

        /* Transaction Type */
        .transaction-type {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.375rem 0.875rem;
            border-radius: 8px;
            font-size: 0.875rem;
            font-weight: 600;
        }

        .transaction-type.credit {
            background: rgba(40, 167, 69, 0.1);
            color: #28a745;
        }

        .transaction-type.debit {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }

        .transaction-type-icon {
            font-size: 0.75rem;
        }

        /* Amount */
        .transaction-amount {
            font-weight: 700;
            font-size: 1.1rem;
        }

        .transaction-amount.credit {
            color: #28a745;
        }

        .transaction-amount.debit {
            color: #dc3545;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 3rem 1rem;
            color: #6c757d;
        }

        .empty-state-icon {
            font-size: 4rem;
            color: #dee2e6;
            margin-bottom: 1rem;
        }

        .empty-state-text {
            font-size: 1rem;
            margin: 0;
        }

        /* Mobile Card View */
        .transaction-card {
            display: none;
            background: #ffffff;
            border: 1px solid #e9ecef;
            border-radius: 12px;
            padding: 1.25rem;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }

        .transaction-card:hover {
            border-color: rgba(153, 72, 197, 0.3);
            box-shadow: 0 4px 12px rgba(153, 72, 197, 0.1);
            transform: translateY(-2px);
        }

        .transaction-card-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px solid #f1f3f5;
        }

        .transaction-card-id {
            font-family: 'Courier New', monospace;
            font-size: 0.8rem;
            color: #9948c5;
            font-weight: 600;
            word-break: break-all;
        }

        .transaction-card-amount {
            font-weight: 700;
            font-size: 1.25rem;
        }

        .transaction-card-body {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .transaction-card-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .transaction-card-label {
            font-size: 0.85rem;
            color: #6c757d;
            font-weight: 500;
        }

        .transaction-card-value {
            font-size: 0.9rem;
            color: #1a1a2e;
            font-weight: 600;
        }

        /* Responsive Design */
        @media (max-width: 767.98px) {
            .transactions-card {
                padding: 1.5rem 1.25rem;
                border-radius: 16px;
            }

            .transactions-title {
                font-size: 1.5rem;
            }

            .transactions-subtitle {
                font-size: 0.9rem;
            }

            .transactions-table {
                display: none;
            }

            .transaction-card {
                display: block;
            }

            .btn-download {
                width: 100%;
                margin-top: 1rem;
            }
        }

        @media (max-width: 575.98px) {
            .transactions-card {
                padding: 1.25rem 1rem;
                border-radius: 14px;
            }

            .transactions-title {
                font-size: 1.35rem;
            }

            .transaction-card {
                padding: 1rem;
            }

            .transaction-card-amount {
                font-size: 1.1rem;
            }
        }
    </style>
</head>
<body>
    <%- include('../../components/app_navbar') %>

    <div class="outer-container py-4 py-md-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10">
                    <!-- Transactions Card -->
                    <div class="transactions-card">
                        <!-- Header Section -->
                        <div class="transactions-header">
                            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
                                <div>
                                    <h2 class="transactions-title mb-2">Transaction History</h2>
                                    <p class="transactions-subtitle mb-0">View all your past transactions</p>
                                </div>
                                <button class="btn btn-download" onclick="exportTransactions()">
                                    <i class="fas fa-download"></i>Download CSV
                                </button>
                            </div>
                        </div>

                        <% if (transactions.length > 0) { %>
                            <!-- Desktop Table View -->
                            <div class="transactions-table-wrapper">
                                <table class="table transactions-table">
                                    <thead>
                                        <tr>
                                            <th>Transaction ID</th>
                                            <th>Date</th>
                                            <th>Type</th>
                                            <th class="text-end">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% transactions.forEach(transaction => { %>
                                            <tr>
                                                <td>
                                                    <span class="transaction-id">
                                                        <i class="fas fa-receipt transaction-id-icon"></i>
                                                        <%= transaction._id.toString().substring(0, 8) %>...
                                                    </span>
                                                </td>
                                                <td class="transaction-date">
                                                    <%= new Date(transaction.createdAt).toLocaleString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                                                </td>
                                                <td>
                                                    <span class="transaction-type <%= transaction.type === 'credit' ? 'credit' : 'debit' %>">
                                                        <i class="fas <%= transaction.type === 'credit' ? 'fa-arrow-down' : 'fa-arrow-up' %> transaction-type-icon"></i>
                                                        <%= transaction.type === "credit" ? "Funds Added" : "Funds Used" %>
                                                    </span>
                                                </td>
                                                <td class="text-end">
                                                    <span class="transaction-amount <%= transaction.type === 'credit' ? 'credit' : 'debit' %>">
                                                        <%= transaction.type === "credit" ? "+" : "-" %>$<%= transaction.amount.toFixed(2) %>
                                                    </span>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Mobile Card View -->
                            <div class="transaction-cards-mobile">
                                <% transactions.forEach(transaction => { %>
                                    <div class="transaction-card">
                                        <div class="transaction-card-header">
                                            <div class="transaction-card-id">
                                                <i class="fas fa-receipt me-2"></i>
                                                <%= transaction._id.toString().substring(0, 12) %>...
                                            </div>
                                            <div class="transaction-card-amount <%= transaction.type === 'credit' ? 'credit' : 'debit' %>">
                                                <%= transaction.type === "credit" ? "+" : "-" %>$<%= transaction.amount.toFixed(2) %>
                                            </div>
                                        </div>
                                        <div class="transaction-card-body">
                                            <div class="transaction-card-row">
                                                <span class="transaction-card-label">Date</span>
                                                <span class="transaction-card-value">
                                                    <%= new Date(transaction.createdAt).toLocaleString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                                                </span>
                                            </div>
                                            <div class="transaction-card-row">
                                                <span class="transaction-card-label">Type</span>
                                                <span class="transaction-type <%= transaction.type === 'credit' ? 'credit' : 'debit' %>">
                                                    <i class="fas <%= transaction.type === 'credit' ? 'fa-arrow-down' : 'fa-arrow-up' %> transaction-type-icon"></i>
                                                    <%= transaction.type === "credit" ? "Funds Added" : "Funds Used" %>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <!-- Empty State (shown when no transactions) -->
                            <div class="empty-state">
                                <div class="empty-state-icon">
                                    <i class="fas fa-inbox"></i>
                                </div>
                                <p class="empty-state-text">No transactions found</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Export transactions to CSV
        function exportTransactions() {
            const transactions = [];
            
            // Get transactions from desktop table view
            const tableRows = document.querySelectorAll('.transactions-table tbody tr');
            if (tableRows.length > 0) {
                tableRows.forEach(row => {
                    const id = row.querySelector('.transaction-id')?.textContent?.trim() || '';
                    const date = row.querySelector('.transaction-date')?.textContent?.trim() || '';
                    const type = row.querySelector('.transaction-type')?.textContent?.trim() || '';
                    const amount = row.querySelector('.transaction-amount')?.textContent?.trim() || '';
                    
                    transactions.push({
                        id: id.replace(/[^\w\s]/gi, '').trim(), // Remove icons
                        date: date,
                        type: type.replace(/[^\w\s]/gi, '').trim(), // Remove icons
                        amount: amount
                    });
                });
            } else {
                // Get transactions from mobile card view
                const cards = document.querySelectorAll('.transaction-card');
                if (cards.length === 0) {
                    showToast('No transactions to export', 'warning');
                    return;
                }
                
                cards.forEach(card => {
                    const id = card.querySelector('.transaction-card-id')?.textContent?.trim() || '';
                    const amount = card.querySelector('.transaction-card-amount')?.textContent?.trim() || '';
                    const dateRow = card.querySelectorAll('.transaction-card-row')[0];
                    const typeRow = card.querySelectorAll('.transaction-card-row')[1];
                    
                    const date = dateRow?.querySelector('.transaction-card-value')?.textContent?.trim() || '';
                    const type = typeRow?.querySelector('.transaction-type')?.textContent?.trim() || '';
                    
                    transactions.push({
                        id: id.replace(/[^\w\s]/gi, '').trim(),
                        date: date,
                        type: type.replace(/[^\w\s]/gi, '').trim(),
                        amount: amount
                    });
                });
            }
            
            if (transactions.length === 0) {
                showToast('No transactions to export', 'warning');
                return;
            }
            
            // Create CSV content
            let csv = 'Transaction ID,Date,Type,Amount\n';
            transactions.forEach(tx => {
                csv += `"${tx.id}","${tx.date}","${tx.type}","${tx.amount}"\n`;
            });
            
            // Download CSV file
            const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `transactions-${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
            
            showToast('Transactions exported successfully', 'success');
        }
        
        // Show toast notification
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            const bgColor = type === 'success' ? 'linear-gradient(135deg, #28a745 0%, #20c997 100%)' 
                          : type === 'error' ? 'linear-gradient(135deg, #dc3545 0%, #c82333 100%)'
                          : type === 'warning' ? 'linear-gradient(135deg, #ffc107 0%, #ff9800 100%)'
                          : 'linear-gradient(135deg, #17a2b8 0%, #138496 100%)';
            
            toast.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                z-index: 9999;
                min-width: 280px;
                max-width: 400px;
                background: ${bgColor};
                color: white;
                padding: 1rem 1.25rem;
                border-radius: 12px;
                box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
                animation: slideInRight 0.3s ease-out;
            `;
            
            toast.innerHTML = `
                <div class="d-flex align-items-center">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : type === 'warning' ? 'exclamation-triangle' : 'info-circle'} me-2"></i>
                    <span style="flex: 1;">${message}</span>
                    <button type="button" class="btn-close btn-close-white ms-2" onclick="this.closest('div[style*=\"position: fixed\"]').remove()" style="opacity: 0.8;"></button>
                </div>
            `;
            
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.style.animation = 'slideOutRight 0.3s ease-out';
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }
        
        // Add CSS animations for toast
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideInRight {
                from {
                    transform: translateX(100%);
                    opacity: 0;
                }
                to {
                    transform: translateX(0);
                    opacity: 1;
                }
            }
            @keyframes slideOutRight {
                from {
                    transform: translateX(0);
                    opacity: 1;
                }
                to {
                    transform: translateX(100%);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(style);
    </script>
    <script src="/js/script.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
</body>
</html>